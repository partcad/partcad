{
  "name": "PartCAD Dev Container",
  "build": {
    // 13:27.664
    "dockerfile": "./Dockerfile"
  },
  "containerEnv": {
    // https://developer.1password.com/docs/cli/config-directories/
    "OP_CONFIG_DIR": "${containerWorkspaceFolder}/.op",
    "PRE_COMMIT_HOME": "${containerWorkspaceFolder}/.pre-commit"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "2.63.2"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "toolsToInstall": "pre-commit,poetry",
      "optimize": true,
      "version": "none" // Python is provided by the base image, we don't need to build it from sources
    },
    "ghcr.io/devcontainers/features/conda:1": {
      "version": "24.5.0" // GH has 24.11.1
    },
    "ghcr.io/deepspacecartel/devcontainers-features/starship:latest": {
      "version": "v1.21.1"
    },
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
      "jqVersion": "1.7.1",
      "yqVersion": "4.44.6",
      "gojqVersion": "none",
      "xqVersion": "none",
      "jaqVersion": "none"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "autoPull": true,
      "installDirectlyFromGitHubRelease": true,
      "version": "3.6.0"
    }
  },
  "postCreateCommand": ".devcontainer/bootstrap.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "dotfiles.repository": "deepspacecartel/dotfiles"
      },
      "remote.extensionKind": {
        "codecov.codecov": ["ui"]
      },
      // <!-- prettier-ignore-start -->
      "extensions": [
        // PartCAD TODO: Move extension to PartCAD organization
        "OpenVMP.partcad",

        // CAD Viewer
        "bernhard-42.ocp-cad-viewer",

        // Python Environment
        "donjayamanne.python-environment-manager",
        "njpwerner.autodocstring", // Python docstring generator
        "kevinrose.vsc-python-indent", // Better Python indentation
        "ms-python.black-formatter",
        "ms-python.python",
        "ms-python.vscode-pylance",

        // Code Formatting
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker", // Because typos are worse than black holes

        // GitHub Integration
        "GitHub.copilot",
        "GitHub.vscode-github-actions",
        "GitHub.vscode-pull-request-github",

        // File Headers
        "psioniq.psi-header",

        // Docker Support
        "ms-azuretools.vscode-docker",

        // YAML Support
        // "redhat.vscode-yaml", # TODO:command 'jumpToSchema' already exists

        // SVG Support
        "jock.svg",

        // Jinja Support
        "samuelcolvin.jinjahtml",

        // Markdown Support
        "yzhang.markdown-all-in-one",
        "bierner.github-markdown-preview",
        "bierner.markdown-checkbox",
        "bierner.markdown-footnotes",
        "bierner.markdown-mermaid",
        "bierner.markdown-preview-github-styles",
        "bierner.markdown-yaml-preamble",
        "chintans98.markdown-jira",

        // Task Management
        "Gruntfuggly.todo-tree",
        "wayou.vscode-todo-highlight", // Additional TODO highlighting

        // Atlassian Integration
        "Atlassian.atlascode",

        // Documentation Support
        "swyddfa.esbonio",
        "lextudio.restructuredtext",
        "trond-snekvik.simple-rst",

        // Code Analysis
        "alexkrechik.cucumberautocomplete",
        "bbenoist.vagrant",
        "codecov.codecov",
        "hediet.debug-visualizer",
        "ryanluker.vscode-coverage-gutters"
      ]
      // <!-- prettier-ignore-end -->
    }
  }
}
